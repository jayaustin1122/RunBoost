<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.note.AddNoteFragment">

    <!-- Title for the screen -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Add Exercise for Time trial"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:gravity="center"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurface"
        android:layout_marginBottom="16dp"/>

    <!-- Label for Exercise Title -->

    <!-- Material TextInputLayout for Exercise Title -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter exercise title"/>

    <!-- Divider -->

    <!-- Label for Exercise Type -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_exercise_type_label"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of Exercise"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Material TextInputLayout for Exercise Type -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter type of exercise">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_exercise_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Exercise"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        app:backgroundTint="@color/btn_bg" />

</LinearLayout>
